<%= form_with(model: @pet || Pet.new, url: pets_path, method: "post", id: "new-pet-form", local: true, multipart: true) do |form| %>
  <% if @pet&.errors&.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
      <i class="bi bi-exclamation-triangle-fill"></i>
      <strong><%= pluralize(@pet.errors.count, "error") %> erros proibiram este Pet para ser salvo:</strong>
      <ul>
        <% @pet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field form-group">
    <%= form.label 'Tutor', class: 'form-label' %>
    <%= form.collection_select :customer_id, Customer.all, :id, :full_name, { include_blank: true, prompt: 'Selecione um tutor' }, { class: 'form-select' } %>
  </div>
  <div class="field form-group">
    <%= form.label 'Nome', class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="input-group mb-3">
    <span class="input-group-text">Sexo do Pet</span>
    <div class="form-check form-check-inline">
      <%= form.radio_button :sex, 0, class: 'form-check-input', id: 'male' %>
      <%= form.label :sex_male, "Male", class: 'form-check-label', for: 'male' %>
    </div>
    <div class="form-check form-check-inline">
      <%= form.radio_button :sex, 1, class: 'form-check-input', id: 'female' %>
      <%= form.label :sex_female, "Female", class: 'form-check-label', for: 'female' %>
    </div>
  </div>
  <div class="field form-group">
    <%= form.label :castrated, class: 'form-label' %>
    <%= form.check_box :castrated, class: 'form-check-input' %>
  </div>
  <div class="field form-group">
    <%= form.label :birthday, class: 'form-label' %>
    <%= form.date_field :birthday, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :race, class: 'form-label' %>
    <%= form.text_field :race, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :specie, class: 'form-label' %>
    <%= form.text_field :specie, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :size, class: 'form-label' %>
    <%= form.number_field :size, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :weight, class: 'form-label' %>
    <%= form.number_field :weight, step: 0.1, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :color, class: 'form-label' %>
    <%= form.text_field :color, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :situation, class: 'form-label' %>
    <%= form.number_field :situation, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :observations, class: 'form-label' %>
    <%= form.text_area :observations, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div class="modal-footer gap-1">
    <%= form.submit "Adicionar", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
  </div>
<% end %>
