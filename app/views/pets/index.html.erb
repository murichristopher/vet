<p class="text-success"><%= notice %></p>
<div class="container p-5">
  <h1 class="mb-3">Pets</h1>
  <div id="pets" class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
        <div class="card h-100">
          <%= render pet %>
          <div class="card-footer">
            <%= link_to "Mostrar pet", pet, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= button_to "Novo pet", new_pet_path, class: "btn btn-success mt-3", method:"get" %>
</div>
