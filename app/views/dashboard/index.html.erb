<div class="cardBox">
  <div class="card">
    <%= link_to customers_path do %>
      <div>
        <div class="numbers"><ion-icon name="person-outline"></ion-icon> <%= Customer.count %> Tuto</div>
      </div>
      <div class="iconBx d-flex" style="gap:0.2em; align-itens:center; justify-content:center;">
        <%= button_to new_customer_path, method:"get", class:"btn btn-primary" do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
        <%= button_to customers_path, method:"get", class:"btn btn-primary" do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="card">
    <div>
      <div class="numbers">
        <ion-icon name="paw-outline"></ion-icon> <%= Pet.count %> Pets
      </div>
    </div>
    <div class="iconBx d-flex" style="gap:0.2em; align-itens:center; justify-content:center;">
      <p class="card-text">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newEntityModal">
          <i class="fa-solid fa-plus"></i>
        </button>
      </p>
      <p class="card-text">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#searchModal">
          <i class="fa-solid fa-magnifying-glass" style="font-size: 16px;"></i>
        </button>
      </p>
    </div>
  </div>
  <%= render 'pets/modal_form'%>
  <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="searchModalLabel">Pesquisar Pet</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render 'pets/search'%>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div>
      <div class="numbers">Agenda</div>
      <div class="cardName">Comments</div>
    </div>
    <div class="iconBx">
      <ion-icon name="chatbubbles-outline"></ion-icon>
    </div>
  </div>
  <div class="card">
    <div>
      <div class="numbers">Preço</div>
      <div class="cardName">sei la mano</div>
    </div>
    <div class="iconBx">
      <ion-icon name="cash-outline"></ion-icon>
    </div>
  </div>
</div>
<div class="details">
  <div class="recentOrders">
    <div class="cardHeader">
      <h2>Esteira de atendimento</h2>
      <%= link_to service_order_service_queue_items_path(1), class: 'btn' do %>
        Acessar
      <% end %>
    </div>
    <table>
      <tr>
        <thead>
          <td>Tutor</td>
          <td>Pet</td>
          <td>Status</td>
        </tr>
      </thead>
      <tbody>
        <% @service_queue_items.each do |sqi| %>
          <tr>
            <td><%= sqi.customer.full_name %></td>
            <td><%= sqi.pet&.name  %></td>
            <td><span class="status delivered">Delivered</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- ================= New Customers ================ -->
  <div class="recentCustomers">
    <div class="cardHeader">
      <h2>Últimas comandas</h2>
    </div>
  </div>
</div>
