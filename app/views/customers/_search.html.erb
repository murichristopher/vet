<%= form_with(url: customers_path, method: "get", local: true) do |form| %>
  <div class="input-group">
    <%= form.text_field :search, placeholder: "Digite o nome do Tutor", value: params[:search], class: "form-control" %>
    <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
    <%= link_to "", customers_path, class: "btn btn-outline-danger bi-trash", role: "button" %>
  </div>
<% end %>
