<% content_for :item do %>
  <div class="d-flex justify-content-between align-items-center ">
    <h1>Tutores</h1>
    <%= render 'search', search_term: params[:search] %>
    <div class='d-flex gap-2 justify-content-center align-items-center'>
      <%= button_to 'Editar', edit_customer_path(@customer), method: :get, class: "btn btn-warning bi-pen"%>
      <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteCustomerModal" data-customer-id="<%= @customer.id %>">
        <i class="bi bi-trash"></i> Deletar
      </button>
      <%= link_to :back, class: "btn btn-secondary d-flex align-items-center gap-2" do %>
        <i class="bi bi-arrow-left"></i> Voltar
      <% end %>
    </div>
  </div>
<% end %>
<div id="<%= dom_id(@customer) %>" class="card mb-3 shadow">
  <div class="card-header bg-primary text-white">
    <i class="fas fa-person"></i> Detalhes do Tutor
  </div>
  <div class="card-body">
    <h5 class="card-title text-center">
      <%= @customer.name %>
    </h5>
    <p class="card-text">
    </p>
    <p class="card-text">
      <i class="fas fa-weight"></i> <strong>CPF:</strong> <%= @customer.registry_code %>
    </p>
  </div>
</div>
<div class="modal fade" id="deleteCustomerModal" tabindex="-1" aria-labelledby="deleteCustomerModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteCustomerModalLabel">Exclusão de Customer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Você tem certeza dessa ação?
      </div>
      <div class="modal-footer">
        <%= button_to "Deletar Customer", "#", method: :delete, class: "btn btn-danger", id: "delete-customer-confirm-btn" %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
