<p class="text-success"><%= notice %></p>
<div class="container p-5">
  <%= render @customer, class: "card mb-3" %>
</div>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Editar", edit_customer_path(@customer), class: "btn btn-primary me-md-2" %>
  <%= link_to 'Voltar', 'javascript:history.back()', class: 'btn btn-secondary' %>
  <%= button_to "Deletar", @customer, method: :delete, class: "btn btn-danger" %>
  <%= link_to "Imprimir termos", customer_path(@customer, format: :pdf), class: "btn btn-danger", target: "_blank" %>
  <%= link_to "Novo pet", new_pet_path, class: "btn btn-primary" %>
</div>

